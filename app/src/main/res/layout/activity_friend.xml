<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用说明：点击不同的按钮，可以弹出对话框，旋转屏幕，可以看到对话框还依然存在，对话框上的按钮事件依然还有效"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip">

        <Button
            android:id="@+id/show_confi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activity中弹确认对话框"/>

        <Button
            android:id="@+id/show_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activity中弹进度条对话框"/>
        </LinearLayout>
   <fragment
       android:id ="@+id/friend_fragment"
       android:name="com.niu.dialogfragment.fragment.FriendFragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       />

</LinearLayout>
